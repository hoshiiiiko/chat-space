.side-header
  .side-header__username
    = current_user.name
  .side-header__btn
    =link_to new_group_path, class: "sideheader__btn--post" do
      = icon('far', 'edit')
    =link_to edit_user_path(current_user), class: "sideheader__btn--setting" do
      = icon('fas', 'cog')

.side-contents
  - current_user.groups.each do |group|
    .side-contents__group
      = link_to '#' do
        .side-contents__group--name
          = group.name
        .side-contents__group--comment
          メッセージはまだありません
